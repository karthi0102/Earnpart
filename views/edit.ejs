<% layout('layout/boilerplate.ejs') %>
    <div class="row">
        <h1 class="text-center">EDIT POST</h1>
        <div class="col-6 offset-3">
        <form action="/earn/<%=feed._id%>?_method=PUT"  class="validate-form" method="POST" novalidate>
            
            <div class="mb-3">
              <label class="form-label" for="domain">DOMAIN
              </label>
              <input class="form-control" type="text" name="feeds[domain]" value="<%= feed.domain%>"id="domain">
            </div>
            <div class="mb-3">
              <label class="form-label" for="location">COMPANY LOCATION
              </label>
              <input class="form-control" type="text" name="feeds[location]" value="<%= feed.location%>"id="location">
            </div>
            <div class="mb-3">
            <label class="form-label" for="duration">DURATION</label>
            <div class=" input-group">
            <input  class="form-control" type="number" name="feeds[duration]" id="duration" value="<%=feed.duration%>">
            <span class="input-group-text" id="basic-addon2">DAYS</span>
            </div>
            <div class="mb-3">
                <label class="from-label" for="desc">Description</label>
                <textarea class="form-control" name="feeds[desc]" id="desc" cols="5" rows="10"><%=feed.desc%></textarea>
            </div>
          <div class="mb-3">
            <button class="btn btn-success">EDIT</button>
          </div>
        </form>
    </div>
    </div>