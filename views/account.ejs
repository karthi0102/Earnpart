<% layout('layout/boilerplate.ejs') %>
<style>
  .float{
	position:fixed;
	width:60px;
	height:60px;
	bottom:40px;
	right:40px;
	background-color:#0C9;
	color:#FFF;
	border-radius:50px;
	text-align:center;
	box-shadow: 2px 2px 3px #999;
}

.my-float{
	margin-top:22px;
    margin-bottom: 20px;
}
</style>
<div class="container">
<div class="row mb-5">
    <div class="col-6 offset-3">
        <div class="card mb-3">
          <% user.image.forEach((img,i) => { %>
              <img src="<%= img.url %>" class="card-img-top" alt="...">
            <% }) %>
            <div class="card-body">
              <h5 class="card-title"><%=user.username%></h5>
              <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            </div>
            <ul class="list-group list-group-flush">
             
              <li class="list-group-item"><%=user.location%></li>
              <li class="list-group-item"><%=user.qualification%></li>
            </ul>
          </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
        <% if(user.skill.length){ %>
    <h2>SKILL SET</h2>
  <div class="card mb-3">
    <div class="card-body">
      <ul class="list-group list-group-flush">
  <% for(let skill of user.skill){%>
    <li class="list-group-item"><%=skill.body%></li>
    <%}%>
      </ul>
      </div>
      </div>
<%}%>
    </div>
</div>
    </div>
  </div>
</div>
<div class="container">
  <% if(user.feeds.length) {%>
  <h2 class="text-center">Posts</h2>
  <div class="row">
      <% for(feed of user.feeds) {%>
        <div class="col-lg-4 col-md-12">
        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <% feed.image.forEach((img,i) => { %>
            <div class="carousel-item <%= i===0 ?'active' :'' %>">
              <img src="<%= img.url %>" class="d-block w-100" alt="...">
            </div>
            <% }) %>
          </div>
          <% if( feed.image.length > 1){ %> 
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
          <%}%> 
        </div>
          <div class="card mb-3" >
              <div class="card-body">
                  <div class="card-body">
                      <p class="card-text"><%=feed.desc%></p>
                    </div>
                    <ul class="list-group list-group-flush">
                      <li class="list-group-item text-muted"><%=feed.author.username%>days</li>
                      <li class="list-group-item text-muted"><%=feed.duration%>days</li>
                    </ul>
                  </div>
                  </div>
                </div>
    <%}%>
  </div>
  <%}%>
</div>
